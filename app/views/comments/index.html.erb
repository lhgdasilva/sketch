<style>
body {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.navbar.navbar-toggleable-md.navbar-light {
  width: 100%;
}

h1 {
  padding-bottom: 1em;
}

.two {
  padding-left: 1em;
  padding-right: 1em;
}

ul.navbar-nav {
  margin-left: 550px;
}

.comments {
  visibility: hidden;
}

.btn-block {
  border: 0.5px black solid;
}
</style>

<p id="notice"><%= notice %></p>

<h1>Latest Comments</h1>

<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th class="two">Piece</th>
      <th class="two"> Created </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td>"<%= comment.comment %>"</td>
        <td class="two"><%= comment.piece.title %></td>
        <td class="two"> <%= time_ago_in_words(comment.created_at) %> ago</td>
        <td><button class="btn btn-secondary"><%= link_to 'See', comment.piece %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="btn btn-block"><%= link_to 'Home', '/pieces' %></button>
