<p id="notice"><%= notice %></p>

<style>

* {
  text-align: center;
  font-family: 'Roboto', sans-serif;
}

li {
  text-align: center;
    list-style-type: none;
    margin: 0;
    padding: 0;
}

img {
  display: block;
  margin: auto;
  margin-bottom: 5%;
  border-radius: 4px;  /* Rounded border */
  padding: 0px; /* Some padding */
  /*width: 100%; /* Set a small width */*/
  /*min-height: 160px;*/
  min-width: 50%;
  max-width: 80%;
  max-height: 800px;
}

.btn-block {
  margin-top: 1em;
}

ul.navbar-nav {
  margin-left: 550px;
}

.box {
  background-color: ghostwhite;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 1em;
  border: black 1px solid;
  width: 500px;
  justify-content: center;
}

.btn-block {
  border: 0.5px black solid;
}
</style>

<p>
  <h3>Name:</h3>
  <h5><%= @piece.title %></h5>
</p>

<p>
  <%= image_tag @piece.url %>
</p>

<div class="box">
<% if @piece.comments != [] %>
  <h2>Comments</h2>
  <% i = 1 %>
  <% @piece.comments.each do |comment| %>
   <p>
    <strong>Comment #<%= i %>:</strong>
    <%= comment.comment %>
    <br>
    <strong>Added:</strong> <em><%= time_ago_in_words(comment.created_at) %> ago</em>
   </p>
   <% i += 1 %>
  <% end %>
<% end %>
</div>
<div class="adding">
<h2>Add comment:</h2>
<%= render 'comments/form', comment: @comment, id: @piece.id %>
</div>


<button class="btn btn-block"><%= link_to 'Back', pieces_path%></button>
